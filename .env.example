# Example .env file
# Django Settings
SECRET_KEY=your-secret-key
DEBUG=False

# Database Settings
DATABASE_URL=sqlite:///db.sqlite3

# Site URL
SITE_URL=http://your-domain.com

# Robokassa Settings
ROBOKASSA_LOGIN=your_robokassa_login
ROBOKASSA_PASSWORD1=your_robokassa_password1  # Password #1 used for payment link generation
ROBOKASSA_PASSWORD2=your_robokassa_password2  # Password #2 used for result verification
ALLOWED_ROBOKASSA_IPS=127.0.0.1,192.168.1.1

# YooKassa Settings
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET_KEY=your_yookassa_secret_key
YOOKASSA_RETURN_URL=https://vagvin.ru/payments/status/

# Heleket Settings
HELEKET_API_URL=https://api.heleket.com/v1/payment
HELEKET_MERCHANT_ID=your_heleket_merchant_id
HELEKET_API_KEY=your_heleket_api_key
HELEKET_RETURN_URL=https://vagvin.ru/payments/status/
HELEKET_SUCCESS_URL=https://vagvin.ru/payments/status/
HELEKET_CALLBACK_URL=https://vagvin.ru/payments/heleket/callback/

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=VAGVIN <your_email@gmail.com> 

# Admin Email
ADMIN_EMAIL=your_email@gmail.com

# Avito/Autoteka Settings
AVITO_TOKEN_URL=https://api.avito.ru/token
AVITO_CLIENT_ID=your_client_id_here
AVITO_CLIENT_SECRET=your_client_secret_here

# Carstat Settings
CARSTAT_API_KEY=your_carstat_api_key

# VINHistory Settings
VINHISTORY_LOGIN=your_vinhistory_login
VINHISTORY_PASS=your_vinhistory_password